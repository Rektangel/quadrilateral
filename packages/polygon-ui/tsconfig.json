{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist/types",
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "jsx": "react"
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/*.stories.ts*", "**/*.spec.ts*"]
}
